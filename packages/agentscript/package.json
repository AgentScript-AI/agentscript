{
    "name": "agentscript-ai",
    "version": "0.8.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/AgentScript-AI/agentscript.git"
    },
    "license": "Elastic License 2.0 (ELv2)",
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.cjs"
            },
            "default": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./anthropic": {
            "import": {
                "types": "./dist/anthropic.d.ts",
                "default": "./dist/anthropic.js"
            },
            "require": {
                "types": "./dist/anthropic.d.ts",
                "default": "./dist/anthropic.cjs"
            }
        },
        "./provider": {
            "import": {
                "types": "./dist/provider.d.ts",
                "default": "./dist/provider.js"
            },
            "require": {
                "types": "./dist/provider.d.ts",
                "default": "./dist/provider.cjs"
            }
        },
        "./schema": {
            "import": {
                "types": "./dist/schema.d.ts",
                "default": "./dist/schema.js"
            },
            "require": {
                "types": "./dist/schema.d.ts",
                "default": "./dist/schema.cjs"
            }
        },
        "./tools": {
            "import": {
                "types": "./dist/tools.d.ts",
                "default": "./dist/tools.js"
            },
            "require": {
                "types": "./dist/tools.d.ts",
                "default": "./dist/tools.cjs"
            }
        }
    },
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "build:esm": "tsc --build ./tsconfig.esm.json",
        "lint": "eslint . --fix --cache",
        "prepack": "cp ../../README.md . && cp ../../LICENSE .",
        "smoke:cjs": "node tests/smoke.test.cjs",
        "smoke:mjs": "node tests/smoke.test.mjs"
    },
    "dependencies": {
        "@agentscript-ai/anthropic": "^0.8.0",
        "@agentscript-ai/core": "^0.8.0",
        "@agentscript-ai/provider": "^0.8.0",
        "@agentscript-ai/schema": "^0.8.0",
        "@agentscript-ai/tools": "^0.8.0",
        "@agentscript-ai/utils": "^0.8.0"
    },
    "devDependencies": {
        "@agentscript-ai/eslint": "^0.8.0",
        "@agentscript-ai/tsconfig": "^0.8.0",
        "eslint": "^9.24.0",
        "typescript": "^5.8.3"
    },
    "publishConfig": {
        "access": "public"
    },
    "nzyme": {
        "cjs": true
    }
}
