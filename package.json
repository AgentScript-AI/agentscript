{
    "repository": {
        "type": "git",
        "url": "https://github.com/AgentScript-AI/agentscript.git"
    },
    "author": "Michał Kędrzyński <m.kedrzynski@gmail.com>",
    "private": true,
    "scripts": {
        "setup": "yarn && nzyme monorepo",
        "monorepo": "nzyme monorepo",
        "clean": "del \"**/dist\" \"/.tsbuildinfo\" \"!**/node_modules/**\"",
        "dev": "yarn setup && turbo run watch",
        "build": "tsc --build tsconfig.dev.json",
        "watch": "yarn build --watch --preserveWatchOutput",
        "upgrade": "yarn up \"@nzyme/*\" && yarn upgrade-interactive",
        "release": "nx release --yes"
    },
    "devDependencies": {
        "@nx/js": "^20.3.0",
        "@nzyme/cli": "^0.3.0",
        "@swc-node/register": "^1.10.9",
        "@swc/core": "^1.10.4",
        "del-cli": "^6.0.0",
        "dotenv-cli": "^8.0.0",
        "nx": "20.3.0",
        "prettier": "^3.4.2",
        "ts-node": "^10.9.2",
        "turbo": "^2.3.3",
        "typescript": "^5.7.2"
    },
    "workspaces": [
        "packages/*",
        "demo/*"
    ],
    "packageManager": "yarn@4.1.0",
    "depcheck": {
        "ignoreDeps": [
            "*"
        ]
    }
}
